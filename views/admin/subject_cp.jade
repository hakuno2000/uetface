extends ../layout
block content
    div.container(ng-app="Subject",ng-controller="SubjectController")
        nav.navbar.navbar-default.navbar-fixed-top
            div.container
                ul.nav.navbar-nav
                    li()
                        a(href='/admin') Trang chủ
                    li(class="active")
                        a(href='/admin/subject') Môn học
                    li()
                        a(href='/admin/teacher') Giảng viên
                    li()
                        a(href='/admin/class') Lớp học
                    li()
                        a(href='/admin/student') Sinh viên
                ul.nav.navbar-nav.navbar-right
                    li
                        a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-expanded="false") Xin chào #{ad}!
                            span(class="caret")
                        ul.dropdown-menu(role="menu")
                            li
                                a(href='/logout') Thoát ra
        br
        h2 Danh sách môn
        div.container
            div.col-sm-12.col-md-12
                select(ng-model="page_length", ng-click="setPage(page_num)", ng-init="page_length=10")
                    option(value='5') 5
                    option(value='10') 10
                    option(value='20') 20
                    option(value='40') 40
                    option(value='60') 60
                    option(value='100') 100
                table.table.table-responsive.table-striped.table-hover
                    tr
                        th.col-sm-1
                            a(href="",ng-click="reverse=!reverse;order('ma_mon', reverse)") Mã môn
                        th.col-sm-2
                            a(href="",ng-click="reverse=!reverse;order('ten_mon', reverse)") Tên môn
                        th.col-sm-2
                            a(href="",ng-click="reverse=!reverse;order('khoa', reverse)") Khoa
                        th.col-sm-2
                            a(href="",ng-click="reverse=!reverse;order('ma_danh_gia', reverse)") Mã đánh giá
                        th.col-sm-2
                            center
                                a(href="",ng-click="reverse=!reverse;order('tin_chi', reverse)") Tín chỉ
                        //th.col-sm-3
                        //    a(href="",ng-click="reverse=!reverse;order('', reverse)") Mô tả
                        th.col-sm-1
                            center
                                a() Chỉnh sửa
                        th.col-sm-1
                            center
                                a() Xóa
                    tr(ng-repeat="subject in subjects")
                        td(ng-bind="subject.ma_mon")
                        td(ng-bind="subject.ten_mon")
                        td(ng-bind="subject.khoa")
                        td(ng-bind="subject.ma_danh_gia")
                        td.text-center(ng-bind="subject.tin_chi")
                        //td
                        //    span(ng-show="subject.less")
                        //        div(ng-bind="subject.mo_ta.showless")
                        //        a(ng-click="more(class)") more
                        //    span(ng-show="subject.more")
                        //        div(ng-bind="subject.mo_ta.showmore")
                        //        span(ng-show='subject.special')
                        //            a(ng-click="more(subject)") less
                        td
                            center
                                a.glyphicon.glyphicon-pencil(href="#Add_Subject", ng-click="edit(subject)")
                        td
                            center
                                a.glyphicon.glyphicon-remove(ng-click='remove(subject)')
                ul.pagination(ng-app='pagination')
                    li(ng-click='Prev()')
                        a(href='') «
                    li(ng-init='page_num=1;page_show=1',class='{{active1}}')
                        a(href='',ng-click='setPage(page_show);', ng-bind='page_show', ng-model='page_num')
                    li(ng-click='page_active(page_show+1)',class='{{active2}}')
                        a(href='',ng-click='setPage(page_show+1);', ng-bind='page_show+1')
                    li(ng-click='setPage(page_show+2)',class='{{active3}}')
                        a(href='', ng-bind='page_show+2')
                    li(ng-click='setPage(page_show+3)',class='{{active4}}')
                        a(href='', ng-bind='page_show+3')
                    li(ng-click='setPage(page_show+4)',class='{{active5}}')
                        a(href='', ng-bind='page_show+4')
                    li(ng-click='Next()')
                        a(href='') »
        br

        script(type="text/javascript", src='/javascripts/subject.js').