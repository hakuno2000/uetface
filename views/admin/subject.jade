extends ../layout
block content
    nav(class="navbar navbar-default navbar-fixed-top")
        div(class="container")
            ul(class="nav navbar-nav")
                li()
                    a(href='/admin') Trang chủ
                li(class="active")
                    a(href='/admin/subject') Môn học
                li()
                    a(href='/admin/teacher') Giảng viên
                li()
                    a(href='/admin/class') Lớp học
                li()
                    a(href='/admin/student') Sinh viên
            ul.nav.navbar-nav.navbar-right
                li
                    a(href="#", class="dropdown-toggle", data-toggle="dropdown", role="button", aria-expanded="false") Xin chào #{ad}!
                        span(class="caret")
                    ul(class="dropdown-menu" role="menu")
                        li
                            a(href='/logout') Thoát ra
    br
    h1 Danh sách môn
    div.container
        table.table.table-responsive.table-striped.table-hover(ng-app="listclass", ng-controller="classController")
            tr
                th
                    a(href="",ng-click="reverse=!reverse;order('ma_mon', reverse)") Mã môn
                th
                    a(href="",ng-click="reverse=!reverse;order('ten_mon', reverse)") Tên môn
                th
                    a(href="",ng-click="reverse=!reverse;order('khoa', reverse)") Khoa
                th
                    a(href="",ng-click="reverse=!reverse;order('tin_chi', reverse)") Tín chỉ
                th
                    a(href="",ng-click="reverse=!reverse;order('', reverse)") Mô tả
            tr(ng-repeat="class in classes")
                td(ng-bind="class.ma_mon")
                td(ng-bind="class.ten_mon")
                td(ng-bind="class.khoa")
                td(ng-bind="class.tin_chi")
                td(ng-bind="class.mo_ta")
    br
    h1 Thêm môn học
    h2 #{rp}
    div.containter
        div.col-sm-6.col-md-6
            form(method="post",action="",name="add_class")
                div.form-group
                    label
                        |Mã môn
                    input.form-control(name="ma_mon",type="text", placeholder="INT...")
                div.form-group
                    label
                        |Tên môn
                    input.form-control(name="ten_mon", type="text", placeholder="Lập trình nâng cao")
                div.form-group
                    label
                        |Khoa
                    input.form-control(name="khoa", type="text", placeholder="Công nghệ thônng tin")
                div.form-group
                    label
                        |Tín chỉ
                    input.form-control(name="tin_chi", type="number", placeholder="2")
                div.form-group
                    label Mô tả
                    textarea.form-control(name="mo_ta",placeholder="...",rows="3")
                div.form-group
                    input.btn.btn-default(name="add_submit", type="submit", value="Tạo môn")
    script(type="text/javascript" src='/javascript/subject.js').