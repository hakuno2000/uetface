extends layout

block content
  h1= title
  p Welcome to #{title}
  h2(style="color:red") #{Log_rp}
  form(method="post", action="", name="login_form")
      table
          tr
            td
              span Tài khoản
            td
              span Mật khẩu
          tr
            td
                input#username(name="username" type="text")
            td
                input#password(name="password" type="password")
            td
                input#login(name="login" type="submit" value="Đăng nhập")
  h1 Đăng Ký
  form(method="post", action"/", name="reg_form")
      table
          tr
            td
                input(name="std_name",type="text", placeholder="Họ tên")
          tr
            td
                |K
                input(name="std_grade", type="text", placeholder="Khóa")
                |-
                input(name="std_class", type="text", placeholder="Lớp")
          tr
            td
                input(name="std_id", type="text", placeholder="Mã sinh viên")
          tr
            td
                input(name="reg_user", type="text", placeholder="Tài khoản mới")
          tr
            td
                input(name="reg_email", type="email", placeholder="Email")
          tr
            td
                input(name="reg_pass", type="password", placeholder="Mật khẩu")
          tr
            td
                |Nam
                input#Male(name="sex", type="radio", value="M",checked)
                |Nữ
                input#FeMale(name="sex", type="radio",value="F")
          tr
            td
                input(name="register", type="submit", value="Đăng ký")
          h1(style="color:red;") #{Reg_rp}